		{ name = "comment.line.pascal.two"; match = "//.*$"; },
		{ name = "comment.block.pascal.one"; begin = "\\(\\*"; end = "\\*\\)"; },
		{ name = "comment.block.pascal.two"; begin = "\\{"; end = "\\}"; },

		{ name = "string.double-quoted.pascal"; begin = "\""; end = "\""; swallow = "\\\\."; },
		{ name = "string.single-quoted.pascal"; begin = "'"; end = "'"; swallow = "\\\\."; },

	);
